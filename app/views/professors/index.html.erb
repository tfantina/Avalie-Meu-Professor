<% if !user_signed_in?  %>
  <div class="jumbotron">
    <h1> Professor Review </h1>
    <p> Read reviews before chooing a class, rate your professors at the end of the semester
      and sign in to add a professor. </p>
      <p> <%= link_to "Sign up to add a professor", signup_path, class: "btn btn-primary btn-lg" %></p>

  </div>
<% end %>
<div class="row">

<% @professors.each do |professor| %>
   <div class=".col-sm-6 col-md-3">
     <div class="thumbnail">
  
       <ul class="list-unstyled text-muted">
         <li> <h2> <%= link_to professor.try(:fullname), professor %>
         <li> <%= professor.try(:school) %></li>
         <li class="small"> <%= professor.try(:department) %></li>
       </ul>
     </div>
    </div>
  <% end %>

</div>
 <%= will_paginate @professors %>
