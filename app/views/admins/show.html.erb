<div class="row">
  <div class="col-lg-6">
      <h2>Professors to Review</h2>
  </div>
  <div class="col-lg-6">
      <h2>Comments to Review</h2>
  </div>
</div>
  <div class="row">

<div class="col-lg-6">

<% if @professor.blank? %>
Nothing to review!
<% else %>
<div class="list-group">
  <ul class="list-unstyled">
  <% @professor.each do |prof| %>
      <li class="list-group-item">  <%= prof.fullname %> has been flagged <%= pluralize(prof.flag, 'time') %>.
          <%= link_to 'View', prof %>
            <%= link_to 'Edit', edit_professor_path(prof) %>
           <%= link_to 'Delete', prof, method: :delete, data: {confirm: "Are you sure you want to delete this professor?"} %> </li>
      <% end %>

  </ul>
</div>
<% end %>

</div>
<div class="col-lg-6">


  <% if @review.blank? %>
  Nothing to review!
  <% else %>
  <div class="list-group">
    <ul class="list-unstyled">
    <% @review.each do |review| %>
        <li class="list-group-item">  <%= review.comment %> Review Flagged:
          <%= pluralize(review.flag, 'time') %>.   <%= link_to 'View',   professor_review_path(review) %>
           <%= link_to 'Edit', edit_professor_review_path(review, review) %>
           <%= link_to 'Delete',  professor_review_path(review, review), method: :delete, data: {confirm: "Are you sure you want to delete this review?"} %> </li>
        <% end %>

    </ul>
  </div>
  <% end %>

</div>
</div>
