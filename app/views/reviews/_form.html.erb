
<div class="panel panel-default">

  <div class="pannel-body">
    <div class="row">

      <div class="col-md-4">

<%= form_for([@professor, @review]) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <strong> Homework Difficulty/Amount:</strong>
    <div id="star-hw"></div>
  </div>
</br>

  <div class="field">
    <strong>Easiness: </strong>
    <div id="star-ease"></div>
  </div>
</br>

  <div class="field">
    <strong> Test Difficulty/Amount: </strong>
    <div id="star-test"></div>
  </div>
</br>

  <div class="field">
    <strong> Your intrest in the subject: </strong>
    <div id="star-interest"></div>
  </div>
</br>

  <div class="field">
    <strong>Did they seem to care about your learning:</strong>
    <div id="star-helpful"></div>
  </div>
</br>

  <div class="field" >
    <strong>Comments:</strong><br>
    <%= f.text_area :comment, cols: "60", rows: "5" %>
  </div>
  <% if !user_signed_in? %>
  <div class="field">
    <strong>Username:</strong>(this will be shown by your review):
    <%= f.text_area :Guest %>
  </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<script>
  $('#star-rating').raty({
    path: 'http://dev.travisfantina.com/stars/',
    scoreName: 'review[rating]'
  });
  $('#star-hw').raty({
    path: 'http://dev.travisfantina.com/stars/',
    scoreName: 'review[hw]'
  });
  $('#star-ease').raty({
    path: 'http://dev.travisfantina.com/stars/',
    scoreName: 'review[ease]'
  });
  $('#star-test').raty({
    path: 'http://dev.travisfantina.com/stars/',
    scoreName: 'review[tests]'
  });
  $('#star-interest').raty({
    path: 'http://dev.travisfantina.com/stars/',
    scoreName: 'review[interesting]'
  });
  $('#star-helpful').raty({
    path: 'http://dev.travisfantina.com/stars/',
    scoreName: 'review[helpful]'
  });

  </script>
