
<div class="panel panel-default">

  <div class="pannel-body">
    <div class="row">

      <div class="col-md-4">

<%= form_for([@professor, @review]) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <strong>Facilidade: </strong>
    <div id="star-ease"></div>
  </div>
</br>

  <div class="field">
    <strong>  Seu interesse na matéria: </strong>
    <div id="star-interesting"></div>
  </div>
</br>

  <div class="field">
    <strong>O professor importou-se com seu aprendizado?</strong>
    <div id="star-helpfull"></div>
  </div>
</br>

  <div class="field" >
    <strong>comentários:</strong><br>
    <%= f.text_area :comment, cols: "60", rows: "5" %>
  </div>

  <%= raw recaptcha_tags %>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>




<% end %>

<script>

  $('#star-ease').raty({
    path: 'http://dev.travisfantina.com/services/AvaliarMeuProfessor/stars/',
    scoreName: 'review[ease]'
  });
  $('#star-interesting').raty({
    path: 'http://dev.travisfantina.com/services/AvaliarMeuProfessor/stars/',
    scoreName: 'review[interesting]'
  });
  $('#star-helpfull').raty({
    path: 'http://dev.travisfantina.com/services/AvaliarMeuProfessor/stars/',
    scoreName: 'review[helpfull]'
  });

  </script>
