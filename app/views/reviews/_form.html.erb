<!-- form for ratings -->
<%= form_for([@professor, @review]) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="field">
      Matéria que o professor lecionou? <%= f.text_field :whatclass %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <!-- ratings -->
      <div class="table-responsive">
        <table class="table col-md-4">
          <tr>
            <td class="col-md-4">Facilidade: </td>
            <td class="col-md-2"><div id="star-ease"></div></td>
          </tr>
          <tr>
            <td class="col-md-4">Seu interesse na matéria:</td>
            <td class="col-md-2"><div id="star-interesting"></div></td>
          </tr>
          <tr>
            <td class="col-md-4">O professor importou-se com seu aprendizado?</td>
            <td class="col-md-2"><div id="star-helpfull"></div></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="col-md-6">
      <!-- about professor -->

      <div class="field">
        Boa didática? Sim?
        <%= f.check_box :teachwell %>
      </div>

      <div class="field">
        Recomendaria esse professor? Sim?
        <%= f.check_box :recommend %>
      </div>

      <div class="field" >
        Comentários:
        <br/>
        <%= f.text_area :comment, cols: "60", rows: "5" %>
      </div>
      <!-- generic student information -->
      <div class="field">
        Qual sua graduação?
        <%= f.text_field :major %>
      </div>
    </div>
  </div>

  <!-- terms of service & captcha -->

  <div class="row">
    <span></span>
    <div class="col-xs-4 col-xs-offset-4">
      <div class="field">
        <%= f.check_box :terms_of_service %>  I agree to the website's <%= link_to "terms & conditions", terms_path %>
      </div>

      <%= raw recaptcha_tags %>

      <div class="actions">
        <%= f.submit "Inserir", class: "btn btn-primary"%>
      </div>

    </div>
  </div>
  <% end %>




<script>

  $('#star-ease').raty({
    path: 'http://dev.travisfantina.com/services/AvaliarMeuProfessor/stars/',
    scoreName: 'review[ease]'
  });
  $('#star-interesting').raty({
    path: 'http://dev.travisfantina.com/services/AvaliarMeuProfessor/stars/',
    scoreName: 'review[interesting]'
  });
  $('#star-helpfull').raty({
    path: 'http://dev.travisfantina.com/services/AvaliarMeuProfessor/stars/',
    scoreName: 'review[helpfull]'
  });

  $('#star-ease').raty('review[ease]')

